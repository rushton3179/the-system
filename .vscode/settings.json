    "eslint.packageManager": "yarn",
    "html.autoClosingTags": false,
    "javascript.autoClosingTags": false,
    "typescript.tsdk": "node_modules/typescript/lib",
    "cSpell.enabledLanguageIds": [
        "css",
        "git-commit",
        "html",
        "javascript",
        "javascriptreact",
        "markdown",
        "plaintext",
        "scss",
        "text",
        "typescript",
        "typescriptreact"
    ]
